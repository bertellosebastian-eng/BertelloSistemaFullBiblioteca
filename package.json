{
  "name": "sebabiblio",
  "version": "1.0.0",
  "description": "Sistema de Biblioteca Escolar - Sebastián Bertello",
  "author": {
    "name": "Sebastián Bertello",
    "email": "sebastian.bertello@email.com"
  },
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.1.3"
  },
  "build": {
    "appId": "com.sebabiblio.app",
    "productName": "SebaBiblio",
    "directories": {
      "output": "dist",
      "app": "app"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "assets/**",
      "components/**",
      "db/**",
      "models/**",
      "modules/**",
      "services/**",
      "utils/**"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "artifactName": "${productName}-${version}-${arch}-portable.exe",
      "sign": null
    },
    "publish": []
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "node-fetch": "^3.3.2"
  },
  "main": "app/main.js"
}
